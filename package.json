{
  "name": "lavalamp",
  "description": "Lava Lamp is a JavaScript plugin for menus. It creates a div that moves when you hover over an element, giving it an elastic animation.",
  "keywords": [
    "navigation",
    "navbar",
    "nav",
    "animation",
    "hover",
    "CSS3 transitions",
    "menu"
  ],
  "version": "2.0.0",
  "types": "interfaces/index.d.ts",
  "author": {
    "name": "Richard Hung",
    "email": "richardhung111@gmail.com",
    "url": "https://www.magicmediamuse.com/"
  },
  "scripts": {
    "dev": "nodemon",
    "lint": "npx eslint src/ --ext .js,.jsx,.ts,.tsx",
    "build": "rm -rf dist && tsc && npm run scss",
    "scss": "sass src/lavalamp.scss dist/lavalamp.css"
  },
  "licenses": [
    {
      "type": "Creative Commons Attribution-NonCommercial 3.0 Unported License",
      "url": "http://creativecommons.org/licenses/by-nc/3.0/deed.en_US"
    }
  ],
  "main": "dist/lavalamp.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Richard1320/Lava-Lamp.git"
  },
  "bugs": {
    "url": "https://github.com/Richard1320/Lava-Lamp/issues"
  },
  "homepage": "https://lavalamp.magicmediamuse.com",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "eslint": "^7.15.0",
    "nodemon": "^2.0.6",
    "sass": "^1.30.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": false
    }
  }
}
